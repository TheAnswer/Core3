	@local
	@preLocked
	public float addToCityTreasury(double val) {
		cityTreasury = cityTreasury + val;

		if (cityTreasury < 0) {
			cityTreasury = 0;
		}

		if (cityTreasury > 100000000) {
			cityTreasury = 100000000;
		}

		return cityTreasury;
	}

	@local
	@preLocked
	public double subtractFromCityTreasury(double val) {
		cityTreasury = cityTreasury - val;

		if (cityTreasury < 0) {
			cityTreasury = 0;
		}

		return cityTreasury;
	}

